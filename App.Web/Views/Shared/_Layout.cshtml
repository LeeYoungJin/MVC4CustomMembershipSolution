<!DOCTYPE html>

<html lang="en">
<head>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />

        @if (User.IsInRole("Admin"))
        {
            <link href="@Url.Content("~/content/admin.toolbar.css")" rel="stylesheet" type="text/css" media="screen,projection" />
            @*<script src="@Url.Content("~/scripts/admin/admin.js")" type="text/javascript"></script>*@
        }

    </head>
</head>
<body>
    @if (User.IsInRole("Admin"))
    {
        @Html.Action("_toolbar", "parts", new { area = "admin" });
    }
    <header>
        <section id="login">
            @Html.Partial("_LoginPartial")
        </section>
    </header>
    <div id="body">
        @RenderBody()
    </div>
        
</body>
</html>
